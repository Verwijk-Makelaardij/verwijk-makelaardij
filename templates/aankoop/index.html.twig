{% extends 'base.html.twig' %}

{% block title %}Aankoop{% endblock %}

{% block body %}
	<main>
		<article class="aankoop">
			<div class="container section_header">
				<div class="row">
					<div class="col-md-12">
						<h2>Aankoop</h2>
					</div>
				</div>
			</div>
			<div class="container section_content">
				<div class="row">
					<div class="col-md-6">
